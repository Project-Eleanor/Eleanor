# Eleanor Backend Configuration
# Copy this file to .env and configure your settings
# This file is automatically loaded by pydantic-settings

# =============================================================================
# Core Settings (can also be set via docker-compose environment)
# =============================================================================
# DATABASE_URL=postgresql+asyncpg://eleanor:eleanor@localhost:5432/eleanor
# ELASTICSEARCH_URL=http://localhost:9200
# REDIS_URL=redis://localhost:6379
# SECRET_KEY=change-this-in-production

# =============================================================================
# Integration Settings
# =============================================================================

# IRIS - Case Management
# Get API key from IRIS: My Settings > API Key
IRIS_ENABLED=true
IRIS_URL=https://eleanor-iris-nginx
IRIS_API_KEY=your-iris-api-key-here
IRIS_VERIFY_SSL=false

# Velociraptor - Endpoint Collection (gRPC)
# Uses pyvelociraptor with client certificates for authentication
# Generate certs using: velociraptor config api_client
# GUI accessible at: https://localhost:8889
VELOCIRAPTOR_ENABLED=true
VELOCIRAPTOR_URL=eleanor-velociraptor:8003
VELOCIRAPTOR_CA_CERT=/app/certs/velociraptor/ca.crt
VELOCIRAPTOR_CLIENT_CERT=/app/certs/velociraptor/client.crt
VELOCIRAPTOR_CLIENT_KEY=/app/certs/velociraptor/client.key

# OpenCTI - Threat Intelligence Platform
# Deploy OpenCTI and get API token from: Settings > Parameters > API Access
OPENCTI_ENABLED=true
OPENCTI_URL=http://eleanor-opencti:8080
OPENCTI_API_KEY=your-opencti-token-here
OPENCTI_VERIFY_SSL=false

# Shuffle - SOAR / Workflow Automation
# Deploy Shuffle and get API key from: Settings > Organization > API Key
SHUFFLE_ENABLED=true
SHUFFLE_URL=http://eleanor-shuffle-backend:5001
SHUFFLE_API_KEY=your-shuffle-api-key-here
SHUFFLE_VERIFY_SSL=false

# Timesketch - Timeline Analysis
# Uses username/password authentication
TIMESKETCH_ENABLED=true
TIMESKETCH_URL=http://eleanor-timesketch-nginx
TIMESKETCH_USERNAME=eleanor
TIMESKETCH_PASSWORD=eleanor
TIMESKETCH_VERIFY_SSL=false
